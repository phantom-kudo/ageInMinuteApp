<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/khaki"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Your"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textColor="@color/indianared"
        android:layout_gravity="center"
        android:layout_margin="16sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/teal_200"
        android:text="age"
        android:padding="20dp"
        android:textColor="@color/indianared"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:textSize="30sp"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="in minutes"
        android:textColor="@color/indianared"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/date_Picker_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:onClick="btnDatePicker"
        android:text="@string/select_the_date"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/indianared"
        android:textAllCaps="true"
        android:padding="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="selected date"
        android:textColor="@color/indianared"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/indianared"
        android:text="age in minutes"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/age_in_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"/>

</LinearLayout>